<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- âœ… Barre d'entÃªte dÃ©corÃ©e -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:elevation="40dp"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="84dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/infrastructureee" />

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="260dp"
            android:layout_height="55dp"
            android:letterSpacing="0.3"
            android:text="SIGSignalement"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- âœ… Le reste du contenu scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- âœ… Image illustrÃ©e -->
            <ImageView
                android:id="@+id/imageHome"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/ic_infrastructure" />

            <!-- âœ… Bouton signalement -->
            <Button
                android:id="@+id/buttonSignaler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ—º Faire un signalement"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_rounded" />

            <!-- âœ… Bouton historique -->
            <Button
                android:id="@+id/buttonHistorique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:backgroundTint="@color/colorAccent"
                android:text="ðŸ“‹ Historique"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
