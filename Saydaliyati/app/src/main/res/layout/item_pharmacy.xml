<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pharmacyCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#E1F5E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Pharmacy Name -->
        <TextView
            android:id="@+id/pharmacyNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Pharmacy Name" />

        <!-- Address -->
        <TextView
            android:id="@+id/pharmacyAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            tools:text="123 Main Street, City" />

        <!-- Distance -->
        <TextView
            android:id="@+id/pharmacyDistanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_distance"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            tools:text="500 m" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/pharmacyPhoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            tools:text="+212 5 39 93 88 00"
            android:visibility="visible" />

        <!-- Hours -->
        <TextView
            android:id="@+id/pharmacyHoursText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            tools:text="08:00 - 23:00"
            android:visibility="visible" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- Call Button -->
            <Button
                android:id="@+id/callButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Call"
                android:textColor="@color/colorPrimary" />

            <!-- Directions Button -->
            <Button
                android:id="@+id/directionsButton"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="Directions"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>